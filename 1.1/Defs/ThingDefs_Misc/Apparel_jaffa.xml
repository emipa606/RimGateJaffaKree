<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="ApparelJBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <Beauty>-4</Beauty>
      <SellPriceFactor>0.70</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>
  <!-- ============================ Armor ========================== -->
  <ThingDef ParentName="ApparelJBase">
    <defName>Jaffa_Armor</defName>
    <label>Jaffa Armor</label>
    <description>Powerful Jaffa armor used by the warriors of every Goa'uld.</description>
    <techLevel>Ultra</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Jaffa_Armor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <MarketValue>2250</MarketValue>
      <Mass>15</Mass>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.65</ArmorRating_Sharp>
      <ArmorRating_Heat>0.30</ArmorRating_Heat>
      <Insulation_Cold>25</Insulation_Cold>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.10</MoveSpeed>
      <WorkSpeedGlobal>-0.10</WorkSpeedGlobal>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Item/Equipment/Apparel/Jaffa_Armor</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>JaffaArmor</li>
      </tags>
      <defaultOutfitTags>
        <li>JaffaWarrior</li>
        <li>JaffaGuard</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
